@model rsvp.web.ViewModels.EventViewModel
@{
    ViewBag.Title = "Event RSVP | Southern Poverty Law Center";
}
@using (Html.BeginForm("Register", "Event"))
{
    @Html.HiddenFor(m => m.TemplateId)
    @Html.HiddenFor(m => m.EventId)
    @Html.HiddenFor(m => m.TicketAllowance)


    <div class="container">

        @{
            var imgSrc = $"data:{@Model.Template.MimeType};base64,{@System.Convert.ToBase64String(@Model.Template.Image)}";
        }
        <img src="@imgSrc" class="img-responsive center-block">

        <div class="row">
            <div class="col-md-12">
                <h2>
                    @Html.DisplayFor(m => @Model.Name)
                </h2>
            </div>
        </div>



        @if (Model.IsExpired)
                {
            <div class="row">
                <div class="col-md-12">
                    @Html.Raw(@Model.Template.ExpiredText)
                </div>
            </div>
        }
        @if (Model.IsCancelled)
                {
            <div class="row">
                <div class="col-md-12">
                    @Html.Raw(@Model.Template.CancelText)
                </div>
            </div>
        }
        @if (!Model.IsExpired && !Model.IsCancelled)
        {

            <div class="row">
                <div class="col-md-12">
                    @Html.Raw(@Model.Template.HeaderText)
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">

                    @Html.Raw(@Model.Template.BodyText)

                </div>
            </div>

            <div class="row">
                <div class="col-md-12">Enter the reservation code from your invitation below, then click the Submit button.</div>
            </div>

            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12">
                    @Html.ValidationSummary()
                </div>
                <div class="col-lg-6 col-md-6 col-sm-6">
                    <div class="input-group input-group-lg">
                        @Html.TextBoxFor(x => x.PromoCode, new { @class = "form-control" })
                        <span class="input-group-btn">
                            <button class="btn btn-lg btn-primary" type="submit">Submit</button>
                        </span>
                    </div><!-- /input-group -->
                </div><!-- /.col-lg-6 -->
                <div class="col-lg-12 col-md-12 col-sm-12">
                    <p>Example: 55566677788</p>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    @Html.Raw(@Model.Template.FAQText)
                </div>
            </div>

        }

    </div>
            }